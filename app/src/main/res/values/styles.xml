<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainPageStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textSize">@dimen/text_larger</item>
        <item name="android:background">@color/transparent_black</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="PageTitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textSize">@dimen/text_larger</item>
        <item name="android:background">@color/dark_gray</item>
    </style>
    <style name="TextInputPasswordLayoutToggle">
        <item name="passwordToggleEnabled">true</item>
        <item name="passwordToggleTint">@color/green</item>
        <item name="android:textColorHint">@color/white</item>
    </style>
    <style name="TextInputEditText">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:background">@color/gray_green</item>
    </style>
    <style name="TextViewClickable">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:backgroundTint">@color/green</item>
    </style>


</resources>