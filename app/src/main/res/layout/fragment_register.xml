<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121515"
    android:padding="20dp"
    tools:context=".Register">

    <TextView
        android:id="@+id/textViewRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#121515"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:text="@string/register"
        android:fontFamily="sans-serif-thin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/textViewRegisterName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:text="@string/name"
        android:fontFamily="sans-serif-thin"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewRegister" />
    <EditText
        android:id="@+id/editTextRegisterName"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#1A1E1E"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:hint="@string/edittext_name_hint"
        android:textColorHint="@color/gray"
        android:paddingStart="15dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewRegisterName"
        />
    <TextView
        android:id="@+id/textViewMobileNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:text="@string/mobile_number"
        android:fontFamily="sans-serif-thin"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextRegisterName" />
    <EditText
        android:id="@+id/editTextMobileNumber"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#1A1E1E"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:hint="@string/edittext_mobile_number_hint"
        android:textColorHint="@color/gray"
        android:paddingStart="15dp"
        android:inputType="number"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewMobileNumber"
        />
    <TextView
        android:id="@+id/textViewRegisterEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:text="@string/your_email"
        android:fontFamily="sans-serif-thin"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextMobileNumber" />
    <EditText
        android:id="@+id/editTextRegisterEmail"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#1A1E1E"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:hint="@string/edittext_email_hint"
        android:textColorHint="@color/gray"
        android:paddingStart="15dp"
        android:layout_marginTop="10dp"
        android:inputType="textEmailAddress"
        app:layout_constraintTop_toBottomOf="@+id/textViewRegisterEmail"
        />
    <TextView
        android:id="@+id/textViewRegisterPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:text="@string/password"
        android:fontFamily="sans-serif-thin"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextRegisterEmail" />

    <EditText
        android:id="@+id/editTextRegisterPassword"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#1A1E1E"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:hint="@string/edittext_password_hint"
        android:textColorHint="@color/gray"
        android:paddingStart="15dp"
        android:layout_marginTop="10dp"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@+id/textViewRegisterPassword"
        />
    <Button
        android:id="@+id/buttonPasswordShowHide"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:layout_marginEnd="30dp"
        android:text="@string/button_password_show_hide_hint"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/editTextRegisterPassword"
        app:layout_constraintRight_toRightOf="@+id/editTextRegisterPassword"
        app:layout_constraintTop_toTopOf="@+id/editTextRegisterPassword" />
    <TextView
        android:id="@+id/textViewSignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="@string/already_have_an_account"
        android:textColor="@color/green"
        android:textSize="14sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-thin"
        android:layout_marginBottom="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/buttonToLogin"
        />
    <Button
        android:id="@+id/buttonToLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="@string/sign_up"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/green"
        android:onClick="buttonToLogin"
        />


</androidx.constraintlayout.widget.ConstraintLayout>