<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121515"
    android:padding="20dp"
    tools:context=".Login">

    <TextView
        android:id="@+id/textViewLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#121515"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:text="@string/login"
        android:fontFamily="sans-serif-thin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/textViewLoginEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:text="@string/your_email"
        android:fontFamily="sans-serif-thin"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewLogin" />
    <EditText
        android:id="@+id/editTextLoginEmail"
        android:layout_width="500dp"
        android:layout_height="40dp"
        android:background="#1A1E1E"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:hint="@string/edittext_email_hint"
        android:textColorHint="@color/gray"
        android:paddingStart="15dp"
        android:layout_marginTop="10dp"
        android:inputType="textEmailAddress"
        app:layout_constraintLeft_toRightOf="@+id/textViewLoginEmail"
        app:layout_constraintTop_toBottomOf="@+id/textViewLogin"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/textViewLoginPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:text="@string/password"
        android:fontFamily="sans-serif-thin"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextLoginEmail" />

    <EditText
        android:id="@+id/editTextLoginPassword"
        android:layout_width="500dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:background="#1A1E1E"
        android:hint="@string/edittext_password_hint"
        android:inputType="textPassword"
        android:paddingStart="15dp"
        android:textColor="@color/white"
        android:textColorHint="@color/gray"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/textViewLoginPassword"
        app:layout_constraintTop_toBottomOf="@+id/editTextLoginEmail"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/buttonPasswordShowHide"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:layout_marginEnd="30dp"
        android:text="@string/button_password_show_hide_hint"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/editTextLoginPassword"
        app:layout_constraintRight_toRightOf="@+id/editTextLoginPassword"
        app:layout_constraintTop_toTopOf="@+id/editTextLoginPassword" />
    <TextView
        android:id="@+id/textViewForgetYourPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="@string/forget_your_password"
        android:textColor="@color/green"
        android:textSize="14sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-thin"
        app:layout_constraintTop_toBottomOf="@+id/editTextLoginPassword"
        app:layout_constraintRight_toRightOf="@+id/editTextLoginPassword"
        />
    <TextView
        android:id="@+id/textViewSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="@string/dont_have_an_account"
        android:textColor="@color/green"
        android:textSize="14sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-thin"
        android:layout_marginBottom="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/buttonToMainPage"
        />
    <Button
        android:id="@+id/buttonToMainPage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="@string/login"
        android:textColor="@color/white"
        android:backgroundTint="@color/green"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:onClick="buttonToMainPage"
        />


</androidx.constraintlayout.widget.ConstraintLayout>